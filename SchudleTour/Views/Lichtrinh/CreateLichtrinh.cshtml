@model Model.EF.Lichtrinh
@{
    ViewBag.Title = "Lenlichtrinh";
}

<div style="display: flex ; flex-direction:column; justify-content: center; align-items:center;">
    <h2>Lên Lịch Trình</h2>
</div>
<head>
    <link rel="stylesheet" href="~/css/StyleSheet1.css">
</head>



<div style="  display:flex ; flex-direction:column; justify-content : space-around; align-items:center;">
    <form class="col-md-offset-2 col-md-12"></form>
    <form style=" margin-top:50px;" method="post" action="~/Tour/CreateTour">
        <div class="form-group col-md-6">
            <label>Tên</label>
            <input name="Tendichvu" class="form-control" value="" ">
        </div>
        <div class="form-group col-md-6">
            <label>Mô tả</label>
            <input name="Motadichvu" class="form-control" value="">
        </div>
        <div class="form-group col-md-12 ">
            <div style="display:flex ;justify-content:space-around ">
                <button type="submit" id="buttom">
                    Tạo Lịch trình
                </button>
            </div>
       
        </div>

    </form>
   
    <form style="margin-top:50px" method="post" action="https://localhost:44359/Lichtrinh/Sreachdvdd">
        <button id="buttom" type="submit">
            Thêm
        </button>
    </form>
</div>

<div>
    <div class="containertable" style="display:flex  ">
        <div class="table">
            <table id="customers">
                <tr>
                    <th>

                    </th>
                    <th>
                        Tên
                    </th>
                    <th>
                        Thời gian đến
                    </th>
                    <th>
                        Thời gian đi
                    </th>

                </tr>


                @if (Model != null)
                {
                    int dem = 1;
                    foreach (var item in Model.ThoigianCCDDs)
                    {
                        <tr>
                            <td>
                                @dem
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Diadiemthamquan.DiadiemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Thoigianden)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Thoigiandi)
                            </td>
                        </tr>

                        dem++;

                    }
                    foreach (var item in Model.LichtrinhDVNCCs)
                    {

                        <tr>
                            <td>
                                @dem
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Dichvu.DichvuName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Thoigianden)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.Thoigiandi)
                            </td>
                        </tr>
                        dem++;

                    }
                }

        </div>

        </table>
        <hr />
    </div>
 
</div>





